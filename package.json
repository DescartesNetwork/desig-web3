{
  "name": "@desig/web3",
  "version": "0.1.2",
  "description": "The Decentralized Signature",
  "homepage": "https://web3.desig.io/",
  "keywords": [
    "blockchain",
    "multisig",
    "multichain",
    "blockchain-agnostic",
    "smartcontractless",
    "layer0"
  ],
  "main": "dist/index.js",
  "repository": "git@github.com:DescartesNetwork/desig-web3.git",
  "author": {
    "name": "Tu Phan",
    "email": "tuphan@descartes.network"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "prebuild": "yarn clean",
    "build": "tsc",
    "start": "nodemon src/index.ts",
    "predeploy": "typedoc --includeVersion --excludePrivate --excludeProtected ./src/index.ts",
    "deploy": "echo web3.desig.io >> ./docs/CNAME && gh-pages -d docs",
    "pretest": "yarn build",
    "test": "mocha --exit --require ts-node/register -t 120000 test/**/proposal.test.ts",
    "clean": "rimraf dist"
  },
  "engines": {
    "node": ">=16 <=18"
  },
  "dependencies": {
    "@desig/core": "^0.0.37",
    "@desig/supported-chains": "^0.1.3",
    "@noble/ed25519": "^1.7.1",
    "@noble/hashes": "^1.1.5",
    "@noble/secp256k1": "^1.7.0",
    "@solana/web3.js": "^1.73.0",
    "axios": "^1.2.2",
    "bn.js": "^5.2.1",
    "bs58": "^5.0.0",
    "ethers": "^6.1.0",
    "socket.io-client": "^4.6.1"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.1",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "chai": "^4.3.7",
    "gh-pages": "^4.0.0",
    "mocha": "^10.2.0",
    "rimraf": "^3.0.2",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.23",
    "typescript": "^4.9.4"
  }
}
